= turbo_frame_tag "modal" do
  #remote-modal.modal.fade{
    "aria-hidden" => "true",
    "aria-labelledby" => "newItemRemoteModalLabel",
    "data-action" =>
    "turbo:before-render@document->modal#hideBeforeRender",
    "data-controller" => "modal",
    :tabindex => "-1"
  }
    .modal-dialog.modal-dialog-centered{:role => "document"}
      #modal_content.modal-content
        .modal-header
          %h4#newItemRemoteModalLabel.modal-title= title
          %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
        #remote_modal_body.modal-body.remote_modal_body
          = yield

