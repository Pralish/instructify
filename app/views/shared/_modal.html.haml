= turbo_frame_tag "modal" do
  #remote-modal.modal.fade{
    "aria-hidden" => "true",
    "aria-labelledby" => "newItemRemoteModalLabel",
    tabindex: "-1",
    style: "display: block; padding-left: 0px;",
    data: { controller: "modal", action: "turbo:before-render@document->modal#hideBeforeRender turbo:submit-end->modal#submitEnd" }
  }
    .modal-dialog.modal-dialog-centered{:role => "document"}
      #modal_content.modal-content
        .modal-header
          %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
        #remote_modal_body.modal-body.remote_modal_body
          = yield