.row
  .col.d-flex
    #keysTable.card.border-0.flex-fill.w-100
      .card-header.border-0
        .d-flex.flex-column.flex-md-row.align-items-md-center.justify-content-end
          %h4.card-header-title.h4.text-uppercase Users
          %input.form-control.list-fuzzy-search.mw-md-300px.ms-md-auto.mt-5.mt-md-0.mb-3.mb-md-0.me-3{:placeholder => "Search", :type => "search"}
          = link_to 'Invite User', new_user_invitation_path, data: { turbo_frame: "modal" }, class: 'btn btn-primary'
      .table-responsive
        %table.table.align-middle.table-hover.table-nowrap.mb-0
          %thead.thead-light
            %tr
              %th
                %a.text-muted.list-sort{:cursorshover => "true", "data-sort" => "name", :href => "javascript: void(0);"}
                  Name
                %th.text-muted Creator
                %th.text-muted Editors
              %th.text-end Actions
          %tbody.list
            - @members.each do |member|
              %tr
                %td.title
                  = link_to member.full_name, admin_member_path(member.id), class: 'link'
                %td
                %td
                %td
                  .dropdown.float-end
                    %a.dropdown-toggle.no-arrow.d-flex.text-secondary{"aria-expanded" => "false", "aria-haspopup" => "true", "data-bs-toggle" => "dropdown", :href => "javascript: void(0);", :role => "button"}
                      %i.bi.bi-three-dots-vertical.fs-6
                    %ul.dropdown-menu
                      %li
                        = link_to 'Preview', admin_member_path(member), class: 'dropdown-item' 
                      %li
                        = link_to 'Edit', edit_admin_member_path(member), class: 'dropdown-item' 
                      %li
                        %hr.dropdown-divider/
                      %li
                        = link_to 'Delete', admin_member_path(member), method: :delete,  data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" }, class: 'dropdown-item text-danger' 
    
      .card-footer
        .d-flex.justify-content-end
          != pagy_bootstrap_nav(@pagy)

