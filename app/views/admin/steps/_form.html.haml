- method = step.persisted? ? :patch : :post
- url = step.persisted? ? admin_roadmap_step_path(roadmap_id: step.roadmap.id) : admin_roadmap_steps_path(roadmap_id: step.roadmap.id)
= form_with(model: step, url: url, method: method) do |form|
  = form.hidden_field :parent_id
  .mb-3
    = form.label :title, style: "display: block", class: "form-label"
    = form.text_field :title, class: "form-control"
    %div{:style => "color: red"}
      - if step.errors.include?(:title)
        - step.errors.full_messages_for(:title).each do |error_message|
          = error_message
          \.
  .mb-3
    = form.label :description, style: "display: block", class: "form-label"
    = form.text_area :description, class: "form-control"
    %div{:style => "color: red"}
      - if step.errors.include?(:description)
        - step.errors.full_messages_for(:description).each do |error_message|
          = error_message
          \.
  .mb-3
    = form.submit "Save", class: "btn btn-success btn-block"

