= render "shared/modal", title: t("devise.invitations.new.header") do
  = form_for(@invitable, as: :invitable, url: invitation_path, html: { method: :post }) do |f|
    = render "devise/shared/error_messages", resource: resource
    - resource.class.invite_key_fields.each do |field|
      .field
        = f.label field
        %br/
        = f.text_field field
    .actions
      = f.submit t("devise.invitations.new.submit_button")