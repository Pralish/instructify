

.roadmap__node
  .roadmap__title--md= step.title
  .d-flex.roadmap__node__actions
    - unless step.children.present? 
      = link_to new_admin_roadmap_node_path(roadmap_id: step.roadmap_id, step: { parent_id: step.id }), data: { turbo_frame: "modal" } do
        .bi.bi-plus-square
    = link_to edit_admin_roadmap_node_path(step, roadmap_id: step.roadmap_id, step: { parent_id: step.id }), data: { turbo_frame: "modal" } do
      .bi.bi-pencil-square
    = link_to admin_roadmap_node_path(step, roadmap_id: step.roadmap.id, step: { parent_id: step.id }), method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } do
      .bi.bi-trash