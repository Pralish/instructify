- content_for :head do
  = stylesheet_link_tag 'roadmap'
%main.roadmap.d-block.w-50.m-auto.pt-40
  .container
    %h1.fw-bold.fs-1.roadmap__title.roadmap__title--lg.text-center= @roadmap.title
    %div.blog-data.d-flex.justify-content-center.align-items-center
      %img.me-2.avatar{ src: "https://img.freepik.com/premium-photo/man-with-orange-shirt-is-circle-with-man-orange_745528-3525.jpg?w=2000", alt: "avatar" }
      %div.blog-meta-data.d-flex
        %h6.text-bold.mb-0
          = @roadmap.creator&.first_name
        %i.bi.bi-calendar-check.ms-4.me-2
        %h6.text-bold.mb-0
          = @roadmap.created_at.strftime('%B %d, %Y')
    %hr
    -# .social-links.position-fixed.rounded-3
    -#   .fs-5.text-white.mb-2.border-bottom.p-2.bi.bi-facebook
    -#   .fs-5.text-white.mb-2.bi.border-bottom.p-2.bi-instagram
    -#   .fs-5.text-white.mb-2.bi.border-bottom.p-2.bi-linkedin
    -#   .fs-5.text-white.p-2.bi.bi-twitter
    %p.fs-6.mb-10.d-block.px-4.roadmap__description= @roadmap.description
    %section{data: { controller: "roadmap", roadmap_id: @roadmap.id, action: params[:action] }, style:"height: #{@roadmap.height}px;"}
   

    
      
