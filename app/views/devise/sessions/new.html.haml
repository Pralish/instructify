.login-section
  .container
    .row
      %h2.text-center Sign In
      %p.text-center.mb-4 Enter your email address and password to access admin panel
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field.mb-3
          = f.label :email_address, class: 'fw-bold'
          %br/
          = f.email_field :email, placeholder: 'Your email address', autocomplete: "email", class: 'w-100 rounded border-0 p-2 mt-1'
        .field.mb-1
          = f.label :Password, class: 'fw-bold'
          %br/
          = f.password_field :password, placeholder: 'Your password', autocomplete: "current-password", class: 'w-100 rounded border-0 p-2 mt-1'
        - if devise_mapping.rememberable?
          .field.mb-3
            = f.check_box :remember_me
            = f.label :remember_me
        .actions.text-center.mt-4
          = f.submit "Sign in", class: 'w-100 rounded-pill border-0 text-white fw-bold p-2'
      = render "devise/shared/links"